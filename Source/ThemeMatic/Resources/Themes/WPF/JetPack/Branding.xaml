<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="BrandingBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource BrandingAlternateBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
        <Setter Property="Background" Value="{DynamicResource BrandingBackgroundBrush}" />
        <Setter Property="Height" Value="45" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style TargetType="TextBlock" x:Key="BrandWindowTitle">
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Margin" Value="0,0,20,0" />
        <Setter Property="FontWeight" Value="100" />
        <Setter Property="HorizontalAlignment" Value="Right" />
    </Style>

</ResourceDictionary>